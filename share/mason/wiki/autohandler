<%init>
return $m->call_next();
</%init>

<%method head_links>
<link rel="alternate" type="application/atom+xml"
      title="<% loc( 'Recent Changes in %1', $wiki->title() ) %>"
      href="<% $wiki->uri( view => 'recent.atom' ) %>" />
<%args>
$wiki
</%args>
</%method>

<%method local_nav>
  <ul>
    <li>
      <a href="<% $wiki->uri( view => 'attachments' ) %>"
         title="<% loc('All attachments in this wiki') %>"><% loc( 'All Attachments (%1)', $wiki->file_count() ) %></a>
    </li>
    <li>
      <a href="<% $wiki->uri( view => 'orphans' ) %>"
         title="<% loc('Pages with no incoming links') %>"><% loc( 'Orphans (%1)', $wiki->orphaned_page_count() ) %></a>
    </li>
    <li>
      <a href="<% $wiki->uri( view => 'wanted' ) %>"
         title="<% loc( 'Links to pages which do not yet exist' ) %>"><% loc( 'Wanted Pages (%1)', $wiki->wanted_page_count() ) %></a> 
    </li>
% if ( $c->user()->has_permission_in_wiki( wiki => $wiki, permission => Silki::Schema::Permission->Manage() ) ) {
    <li>
      <a href="<% $wiki->uri( view => 'settings' ) %>"
         title="<% loc( 'Change settings for this wiki' ) %>"><% loc('Settings') %></a> 
    </li>
% }
  </ul>

<%args>
$wiki
</%args>
</%method>
