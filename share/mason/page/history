<p>
<% loc( 'This page has %quant(%1,revision,revisions)', $current_rev ) %>
</p>

<table class="standard-table">
  <thead>
    <tr>
      <th><% loc('Revision #') %></th>
      <th><% loc('Date') %></th>
      <th><% loc('Who') %></th>
      <th></th>
    </tr>
  </thead>
% while ( my $revision = $revisions->next() ) {
  <tbody>
    <tr class="<% $revisions->index() % 2 ? 'odd' : 'even' %>">
      <td>
        <a href="<% $page->uri( view => 'revision/' . $revision->revision_number() ) %>"><% loc( 'Revision %1', $revision->revision_number() ) %></a>
%   if ( $revision->revision_number() == $current_rev ) {
        (<% loc('current') %>)
%   }
      </td>
      <td><% $c->user()->format_datetime( $revision->creation_datetime() ) %></td>
      <td><a href="<% $revision->user()->uri() %>"><% $revision->user()->best_name() %></a></td>
      <td>
        compare
      </td>
    </tr>
  </tbody>
% }
% if ( $pager->total_entries() > $pager->entries_per_page() ) {
  <tfoot id="pager">
    <tr class="<% ( $revisions->index() + 1 ) % 2 ? 'odd' : 'even' %>">
      <td colspan="4">
       <% loc('Page:') %>
%   for my $page_num ( $pager->navigations() ) {
%      if ( $page_num == 0 ) {
       ...
%      } else {
       <a href="<% $page->uri( view => 'history', ( $page_num > 1 ? ( query => { page => $page_num } ) : () ) ) %>"
          title="<% loc( 'Page %1 of history', $page_num ) %>"><% $page_num %></a>
%      }
%   }
      </td>
    </tr>
  </tfoot>
% }
</table>

<%args>
$page
$pager
$revisions
</%args>

<%init>
my $current_rev = $page->most_recent_revision()->revision_number();
</%init>

<%method title>
History of Changes to <% $page->title() %>
<%args>
$page
</%args>
</%method>
